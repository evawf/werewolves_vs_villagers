<%- include('./partials/header') %>
<div>
  <h1><%= currentUser.displayName %>, welcome to Game Hall!</h1>
  <input type="text" name="name" id="gameName" placeholder="Game Name" />
  <button id="newGameBtn">Create Game</button>
  <br />
  <a href="/logout">LOG OUT</a>
</div>
<div id="gamesDiv">
  <p>Game List</p>
  <p>Click the game room to join</p>
  <% games.forEach(game => { %>
  <div id="<%= game.id %>" class="gameDiv">
    <a class="gameName" href="/games/<%= game.id %>"><%= game.name %></a>
  </div>
  <% }) %>
</div>
